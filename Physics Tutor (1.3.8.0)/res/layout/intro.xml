<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical">

    <LinearLayout
    android:id="@+id/LinearLayoutA"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

                <Button
                android:id="@+id/Button_Problems"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="PROBLEMS"
                android:textSize="9pt"/>

                <Button
                android:id="@+id/Button_Constants"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="CONSTANTS"
                android:textSize="9pt"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

                <Button
                android:id="@+id/Button_Settings"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="SETTINGS"
                android:textSize="9pt"/>

                <Button
                android:id="@+id/Button_Help"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:text="HELP"
                android:textSize="9pt"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <Button
            android:id="@+id/Button_Email"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="EMAIL DEVELOPER"
            android:textSize="9pt"/>

            <TextView
            android:id="@+id/AdFreeTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <Button
    android:id="@+id/Button_Display"
    android:layout_gravity="center_horizontal"
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:text="DISPLAY AD"
    android:textSize="9pt"/>
</LinearLayout>